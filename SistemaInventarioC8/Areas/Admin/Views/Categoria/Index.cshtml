
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Lista de Categorias</h2>
    </div>
    <div class="col-lg-6">
        <a asp-area="Admin" asp-action="Upsert" class="btn btn-outline-primary">
            <i class="bi bi-plus-square-fill"></i> Crear Nueva Categoria
        </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/categoria.js" ></script>
}
